@using CardsAgainstWhatever.Client.Components.Panes
@inherits FluxorComponent
@inject IState<GameState> GameState

<div id="game-board" class="p-4">
    <DetailsPane CssStyle="grid-column: 1 / 2; grid-row: 1;" />

    <QuestionCardPane CssStyle="grid-column: 2 / 3; grid-row: 1;" />

    <PlayersListPane CssStyle="grid-column: 3 / 4; grid-row: 1;" />

    @if (GameState.Value.Me?.State == PlayerState.PlayingAnswer)
    {
        <CardsInHandPane CssStyle="grid-column: 1 / 4; grid-row: 2;" />
    }
    else
    {
        <CardsOnTablePane CssStyle="grid-column: 1 / 4; grid-row: 2;" />
    }
</div>

